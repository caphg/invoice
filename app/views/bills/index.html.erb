<h1>Listing Bills</h1>

<table class="table table-stiped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Created at</th>
      <th>Notice</th>
      <th>Footer</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.name %></td>
        <td><%= bill.created_at %></td>
        <td><%= bill.notice %></td>
        <td><%= bill.footer %></td>
        <td><%= bill.status %></td>
        <td><%= link_to 'Show[HR]', bill_path(bill, :locale => 'hr') %></td>
        <td><%= link_to 'Show[EN]', bill_path(bill, :locale => 'en') %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
        <td><%= link_to 'Destroy', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bill', new_bill_path, class: 'btn btn-primary' %>
