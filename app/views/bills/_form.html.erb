        <%= s.label :description %><br>
        <%= s.description %>
      </div>
      <div class="field">
        <%= s.label :amount %><br>
        <%= s.amount %>
      </div>
      <div class="field">
        <%= s.label :currency %><br>
        <%= s.currency %>
      </div>
      <div class="field">
        <%= s.label :quantity %><br>
        <%= s.quantity %>
      </div>
  <% end %>
